<h1>Nueva partida</h1>

<p><%= link_to "← Volver", games_path %></p>

<% if flash[:alert] %>
  <p role="alert"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: games_path, method: :post, local: true do |f| %>
  <label for="players">
    Jugadores (separados por coma)
    <input type="text" name="players" id="players" placeholder="Juan, Pedro, María">
  </label>

  <label for="cards">
    Cartas por ronda (separadas por coma)
    <input type="text" name="cards" id="cards" placeholder="1, 2, 3, 4, 5, 4, 3, 2, 1">
  </label>

  <button type="submit">Crear partida</button>
<% end %>
