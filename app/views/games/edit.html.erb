<div class="games-edit">
  <h1>Edit Game</h1>

  <%= form_with model: @game, local: true do |form| %>
    <% if @game.errors.any? %>
      <div class="errors">
        <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>
        <ul>
          <% @game.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :current_round_number %>
      <%= form.number_field :current_round_number %>
    </div>

    <div class="actions">
      <%= form.submit "Update Game", class: "btn btn-primary" %>
      <%= link_to "Cancel", @game, class: "btn" %>
    </div>
  <% end %>
</div>

